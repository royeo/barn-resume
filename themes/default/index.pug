doctype html
html(lang='zh')
  head
    title= pageTitle
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible' content='ie=edge')
    link(rel='stylesheet' href='css/main.css')
    link(rel='icon' href=icon type="image/x-icon")
  body
    div(class='container')
      div(class='left-section')
        div(class='head-pic')
          img(src= head_pic)
        div(class='module')
          h1(class='title') 个人信息
          each val, index in contact 
            div(class="module-center mt5")
              span(class='subtitle ls2')= index + ':  '
              span(class='content')= val
              br 
        //- div(class='module')
        //-   h1(class='title') 教育背景
        //-   each val, index in education 
        //-     div(class="module-center mt5")
        //-       span(class='subtitle ls2')= index + ':  '
        //-       span(class='content')= val
        //-       br 
        div(class='module')
          h1(class='title') 个人站点
          each val, index in others 
            div(class="mt5" style='text-align: left; padding-left: 30px;')
              span(class='subtitle ls1')= index + ':  '
              a(class='content' href= 'http://' + val target='_blank')= val
              br
        div(class='module')
          h1(class='title') 自我评价
          div(class='content mt5 lh200' style='padding-left: 10px;') 
            each item in profile
              p(style='padding-bottom: 5px; text-indent: 10%')= item


      div(class='right-section' style="margin-top: -25px")
        //- div(class='main-title')
        //-   h1(class='title') #{name}
        //-   //- div(class='bro') #{bro}
        //-   br
        div(class='module')
          h1(class='title') 求职意向
          h3(class='content' style="margin-top: 6px") #{title}

        div(class='module')
          h1(class='title') 技能评估
        div(class='skill-list')
          each val, index in skill
            div(class='skill')
              div(class='skill-name')= index
              div(class='skill-bar') 
                span(class='value' style= 'width: ' + val)
          
        div(class='module')
          h1(class='title') 工作经历
          each val, index in work_exprience
            div(class='subtitle' style="margin-top: 6px")
              span(class='company-dot')= '•'
              span(class='company')= index
              span(class='job-position')= val.job_position
              span(class='time')= val.from + ' - ' + val.to
            div(class='content' style="line-height: 180%")= val.content


        div(class='module' style='margin-top: -10px')
          h1(class='title') 项目经历
            div(class='content mt20' style="line-height: 180%")
              each val, index in project_exprience
                  div(class='subtitle')
                    span(class='project')= index
                    span(class='design')= val.design ? '（' + val.design + '）' : ''
                    span(class="position")= val.position
                    ul(class='content')
                      each item in val.content
                        li(style="font-size: 13px; margin-left: -20px")=item
                    
                  
                  //- div(class='content' style="line-height: 180%; margin-bottom:10px")= val.content

        div(class='module' style='margin-top: -20px; margin-bottom: -15px;')
          h1(class='title') 个人作品
            div(class='content mt20 personal-works' style="line-height: 180%")
                each val, index in personal_work
                  if val.rank
                    div(style='margin-top: 3px')
                  div
                    if val.link
                      a(style='font-weight: 900;' href= val.link target='_blank')= index
                    else 
                      span(style='font-weight: 900')= index
                    span= ': ' + val.content


  footer
    div(style="font-size: 12px; text-align: center") Hosted by <a target="_blank" href="https://coding.net/pages/">Coding Pages</a>